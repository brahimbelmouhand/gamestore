generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Admin {
    id              Int         @id @default(autoincrement())
    userId          Int         @unique
    user            User        @relation(fields: [userId], references: [id])
}

model Client {
    id              Int         @id @default(autoincrement())
    userId          Int         @unique
    user            User        @relation(fields: [userId], references: [id])
}

model User {
    id              Int         @id @default(autoincrement())
    firstName       String    
    lastName        String
    birthDate       DateTime
    email           String      @unique
    username        String      @unique
    password        String
    client          Client?
    admin           Admin?
}